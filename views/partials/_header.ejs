<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <%if (user_id) {%>
      <form class="form-inline" action="/logout" method="POST">
        <h5>logged in As: </h5>
        <div class="form-group mb-2">
          <h3 style="margin-right: 1em; margin-top: .05em; margin-left: 0.5em;"> <%= users[user_id].email %> </h3>
          <button type="submit" class="btn btn-primary">logout</button>
        </div>
      </form>
      <%} else {%>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
          <input class="form-control" type="text" name="email" placeholder="email@email.com"
            style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">login</button>
        </div>
      </form>
      <%}%>
    </div>
  </nav>
</header>